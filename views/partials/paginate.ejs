<div class="mx-2">
    <nav aria-label="Campground Pagination">     
        <ul class="pagination pagination-sm justify-content-center">
            <% if (campgrounds.page == 1) { %>
                <li class="page-item disabled"><a class="page-link">«</a></li>
                <% } else { %>
                    <li><a class="page-link" href="/campgrounds?page=<%= campgrounds.page-1 %>">«</a></li>
                    <% } %>
                        <% if(currentUser -1){%>
                            <li class="page-item">
                                <a class="page-link" href="/campgrounds?page=<%= campgrounds.page-1 %>">
                                    <span area-hidden=" true">&laquo;</span>
                                </a>
                            </li>
                            <% } %>
                                <% if(campgrounds.totalPages> 1 && campgrounds.docs.length) { %>
                                    <% for(let i=startPage; i<=endPage; i++){ %>
                                        <li class="page-item">
                                            <a class="page-link" href="/campgrounds?page=<%= i %>"
                                                <%=i===campgrounds.page ? 'style=color:#000;' :'' %>
                                                ><%= i %></a>
                                        </li>
                                        <% } %>
                                            <% } %>
                                                <% if((currentUser+1) <=totalPages) { %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="/campgrounds?page=<%= campgrounds.page+1 %>">
                                                            <span area-hidden=" true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <% if (campgrounds.page == totalPages) { %>
                                                            <li class="page-item disabled"><a class="page-link">»</a>
                                                            </li>
                                                            <% } else { %>
                                                                <li><a class="page-link"
                                                                        href="/campgrounds?page=<%= campgrounds.page+1 %>">»</a>
                                                                </li>
                                                                <% } %>
        </ul>
    </nav>
</div>